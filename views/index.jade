extends layout

block content
	div.section-wrapper--home
		div.form-wrapper
			div.logo
				img(src="images/logo.png")

			form(id="login-form", class="form", method="POST", action="/login", autocomplete="off")
				div.form__control
					if loginErr != ""
						div.error-dialog-box.show
							| #{loginErr}
					input(name="username", type="text", placeholder="Username 1")
				div.form__control
					input(name="password", type="password", placeholder="Password")
				div.form__control
					input(class="button", id="submit-button", type="submit", value="Login")
				div.form__control
					| you don't have an account? 
					a#switch-signup-link Sign up
				div.form__control OR
				div.form__control
					a.login-fb-button.button(href="/auth/facebook")
						div.fb-icon
							i.fa.fa-facebook
						div.fb-text
							| Login with facebook

			form(id="signup-form", class="form", method="POST", action="/users", autocomplete="off")
				div.form__control
					| have an account? 
					a#switch-login-link Login
				div.form__control
					if usernameErr != ""
						div.error-dialog-box.show
							= usernameErr
					input(name="username", type="text", placeholder="Username")
				div.form__control
					if fullnameErr != ""
						div.error-dialog-box.show
							= fullnameErr
					input(name="fullname", type="text", placeholder="Fullname")
				div.form__control
					if passwordErr != ""
						div.error-dialog-box.show
							= passwordErr
					input(name="password", type="password", placeholder="Password")
				div.form__control
					if confirmPasswordErr != ""
						div.error-dialog-box.show
							= confirmPasswordErr
					input(name="confirm_password", type="password", placeholder="Confirm password")
				div.form__control
					input(class="button", id="submit-button", type="submit", value="Sign up")

	//- div.section-wrapper--intro

	script(src='javascripts/home.js')