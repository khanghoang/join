/*------------------------------------*\
    $CHAT
\*------------------------------------*/

.user-content
	color: site-text-color

sidebar-width = 200px
	
.groups-list
	position: absolute
	top: 80px
	bottom: 20px
	left: 20px
	width: sidebar-width
	background-color: white
	border-radius: 3px
	box-shadow: 0 4px 0 rgba(0,0,0,.10)
	.form
		padding: 10px
		.form__control
			float: left
			input[type="text"]
				width: sidebar-width - (10*3) - (8*2) - 33
				padding: 8px
				color: site-field-text-color
				background-color: site-field-bg-color
			.button
				display: block
				position: relative
				width: 33px
				height: 33px
				margin-left: 10px
				padding: 0
				color: white
				background-color: primary-color
				border: 0
				border-radius: 3px
				outline: none
				.fa
					position: absolute
					top: 0
					right: 0
					bottom: 0
					left: 0
					line-height: 33px
				&:active
					box-shadow: inset 0 3px 5px rgba(0,0,0,.5)
				&:active > .fa
					padding-top: 3px

.group
	padding: 0 10px 10px
	.group__name
		font-weight: 700
	.group__list
		.member
			float: left
			margin: 5px 5px 0 0
			padding: 3px 5px
			font-size: 0.857142em
			font-weight: 700
			color: rgba(255,255,255,.5)
			border-radius: 3px
			&.a, &.m, &.y
				background-color: #ec4b43
			&.b, &.n, &.z
				background-color: #8bb5a9
			&.c, &.o
				background-color: #bbad55
			&.d, &.p
				background-color: #e0b0ac
			&.e, &.q
				background-color: #e1ac2c
			&.f, &.r
				background-color: #21544f
			&.g, &.s
				background-color: #d1bfa9
			&.h, &.t
				background-color: #60754e
			&.i, &.u
				background-color: #6c3f46
			&.j, &.v
				background-color: #55897d
			&.k, &.w
				background-color: #c13929
			&.l, &.x
				background-color: #811b28

.chat-windows-container
	position: absolute
	top: 80px
	right: 20px
	bottom: 20px
	left: 240px
	.chat-window
		position: absolute
		top: 0
		right: 0
		bottom: 0
		left: 0
		background-color: white
		border-radius: 3px
		box-shadow: 0 4px 0 rgba(0,0,0,.10)

