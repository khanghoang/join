/*------------------------------------*\
    $DEFAULTS
\*------------------------------------*/

primary-color = #1ead75
home-bg-color = #2c3338
home-text-color = #606468
home-field-bg-color = #3b4148
home-field-text-color = #eee

site-bg-color = #f4f4f4
site-text-color = #5a5656
site-field-bg-color = #e5e5e5
site-field-text-color = #5a5656

alert-color = #c50f13
success-color = #5da423

html, body
	height: 100%

body
	font: 300 14px 'Open Sans', sans-serif
	background-color: site-bg-color

input
	margin: 0
	padding: 0
	font-family: 'Open Sans', sans-serif
	font-size: 0.857142em
	outline: none
	border: 0
	border-radius: 3px

::-webkit-input-placeholder /* WebKit browsers */
	color: home-text-color

:-moz-placeholder /* Mozilla Firefox 4 to 18 */
	color: home-text-color

::-moz-placeholder /* Mozilla Firefox 19+ */
	color: home-text-color

:-ms-input-placeholder /* Internet Explorer 10+ */
	color: home-text-color

a
	color: primary-color
	text-decoration: none
	cursor: pointer
	&:hover 
		text-decoration: underline

.wrapper
	width: 100%
	height: 100%

/*------------------------------------*\
    $HOME
\*------------------------------------*/

.section-wrapper--home
	width: 100%;
	height: 100%;
	color: home-text-color
	background-color: home-bg-color

.form-wrapper
	position: absolute
	top: 20%
	left: 50%
	margin-left: -125px
	width: 250px
	text-align: center
	.logo
		width: 100%
		height: 105px
	.form
		.form__control
			position: relative
			margin-top: 10px
			input[type="text"], input[type="password"]
				width: 230px
				padding: 15px 10px
				color: home-field-text-color
				background-color: home-field-bg-color

	#login-form, #signup-form
		display: none

	.button
		display: block
		position: relative
		width: 250px
		padding: 15px 0
		color: white
		text-transform: uppercase
		border: 0
		border-radius: 3px
		&:hover
			text-decoration: none
		&:active
			padding: 18px 0 12px
			box-shadow: inset 0 3px 5px rgba(0,0,0,.5)

	#submit-button
		background-color: primary-color

	a.login-fb-button
		height: 17px
		line-height: 47px
		font-size: 0.857142em
		background-color: #4c66a4
		.fb-icon
			position: absolute
			top: 0
			bottom: 0
			left: 0
			width: 47px
			font-size: 1.5em
			background-color: rgba(0,0,0,.15)
		.fb-text
			position: absolute
			top: 0
			right: 0
			bottom: 0
			left: 47px
		&:active > *
			padding-top: 3px

	.error-dialog-box
		position: absolute
		top: 0
		right: -215px
		color: alert-color
		font-size: 0.857142em
		dialog-box(170px,auto,#fff,13px)

/*------------------------------------*\
    $HEADER_BAR
\*------------------------------------*/

.top-header
	height: 70px
	line-height: 70px
	padding: 0 20px
	.logo-small
		display: inline-block
		vertical-align: middle
		bg-sprite('/images/logo_small.png',80px,33px,0,0)
	ul.user-wrapper
		float: right
		height: 100%
		margin: 0
		padding: 0
		list-style: none
		li
			float: left
			height: 100%
			padding: 0 0px 0 20px
			.avatar
				margin: 10px 0
			a
				color: site-text-color

